{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Carousel Manifest",
  "type": "object",
  "required": [
    "id",
    "title",
    "slides",
    "created_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the carousel"
    },
    "title": {
      "type": "string",
      "description": "Title of the carousel"
    },
    "slides": {
      "type": "array",
      "minItems": 5,
      "items": {
        "type": "object",
        "required": [
          "index",
          "text",
          "image_candidates"
        ],
        "properties": {
          "index": {
            "type": "integer",
            "minimum": 1
          },
          "text": {
            "type": "string",
            "description": "Text content for the slide"
          },
          "image_candidates": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri",
              "description": "URL of candidate image"
            }
          },
          "layout": {
            "type": "string",
            "enum": ["text_only", "text_image", "image_only"],
            "description": "Layout type for the slide"
          }
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the carousel was created"
    },
    "niche": {
      "type": "string",
      "description": "Content niche or category"
    },
    "author": {
      "type": "string",
      "description": "Author or source of the content"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata"
    }
  }
}